<h3>Edit Account Details</h3>

<%= form_tag "/users/#{@user.id}", :method => "patch" do %>
  <p>
    <label>Name:</label>
    <input type="text" name="name" value="<%= @user.name %>">
  </p>

  <p>
    <label>Email:</label>
    <input type="text" name="email" value="<%= @user.email %>">
  </p>

  <p>
  </p>

  <p>
    <input type="submit" value="Update User">
  </p>

<% end %>
