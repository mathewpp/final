<div class="page-header">  <h1>Groups</h1>
	<%= link_to "Add Group", "/groups/new", class: 'btn btn-md btn-primary pull-center' %>
</div>

<table class='table table-striped'>
   <tbody>
      <tr>
      	<td colspan="2"><%= paginate @groups %></td>
      	<td></td>
      </tr>
  </tbody>

  <tbody>
  <tr>
      <th>Name</th>
      <th>Description</th>
      <th></th>
    </tr>
   </tbody>	 
  <% @groups.each do |group| %>
  <tbody>
      <tr>
        <td><%= group.name %></td>
        <td><%= group.description %></td>
        <td>
          <% if  GroupUser.find_by_group_id_and_user_id(group.id, @user.id) %>
            <%= link_to "UnJoin", "/groups/user/#{group.id}", :method => "delete", class: 'btn btn-md btn-primary pull-center' %>
          <% else %>
            <%= link_to "Join", "/groups/join/#{group.id}", :method => "post", class: 'btn btn-md btn-primary pull-center' %>
          <% end %>
        </td>
        
      </tr>
  </tbody>
  <% end %>

</table>